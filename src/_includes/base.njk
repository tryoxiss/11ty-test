        {% endblock %}
    </header>
    
    <nav role="related articles" class="glossary">
        {% include "glossary.njk" %}
    </nav>

    <main>
        {% block main %}
        {{ content | safe }}
        {% endblock %}
    </main>

    <nav role="table of contents" class="toc">dasd</nav>

    {% include "footer.njk" %}
