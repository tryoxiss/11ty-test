            <li><a href="/projects/">Our Stuff</a></li>
            <li><a href="/links/">Our Links</a></li>
        </ul>
    </nav>
    
    <header>
        {% block header %}
        <h1>{{ title }}</h1>

        <p class="subtitle">
            {%if author %}
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>{{ author }}
